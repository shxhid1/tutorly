
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Deny read/write access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User files
    match /{userId}/{folder}/{fileName} {
      // Allow users to access only their own files
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow uploads with validation
      allow create: if
        request.auth != null && 
        request.auth.uid == userId &&
        (
          // Check file size (10MB max)
          request.resource.size < 10 * 1024 * 1024 &&
          // Check file type - detailed validation
          (
            // Allow PDF
            request.resource.contentType.matches('application/pdf') ||
            // Allow JPEG, PNG, GIF images
            request.resource.contentType.matches('image/jpeg') ||
            request.resource.contentType.matches('image/png') ||
            request.resource.contentType.matches('image/gif') ||
            // Allow DOCX, DOC
            request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document') ||
            request.resource.contentType.matches('application/msword')
          )
        );
        
      // Allow users to delete their own files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Backups folder with special permissions
    match /backups/{userId}/{backupId}/{fileName} {
      // Allow users to access only their own backups
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to create backups
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Prevent backup deletion for 30 days for data safety
      allow delete: if 
        request.auth != null && 
        request.auth.uid == userId &&
        resource.metadata.creationTime < (request.time.toMillis() - 30 * 24 * 60 * 60 * 1000);
    }
    
    // Shared resources accessible by all authenticated users
    match /resources/{resourceId} {
      allow read: if request.auth != null;
      
      // Only admins can add or modify shared resources
      allow write: if 
        request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
  }
}
